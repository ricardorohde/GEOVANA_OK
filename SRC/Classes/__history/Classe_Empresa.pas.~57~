	[EMP_GERENTE] [varchar](40) NULL,
	[EMP_FONESGERENTE] [varchar](40) NULL,
	[EMP_FAXGERENTE] [varchar](40) NULL,
	[EMP_EMAILGERENTE] [varchar](40) NULL,
